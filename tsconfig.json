{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "ES5",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
            "ScriptHost",
            "ESNext.Promise"
        ],
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ]
}